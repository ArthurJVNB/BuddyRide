<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_logo2"
    tools:context=".Activities.SignUpActivity">


    <ScrollView
        android:layout_width="392dp"
        android:layout_height="475dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_field"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/lightGrey"
                android:textSize="15dp"
                android:ems="10"
                android:hint="First Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/lastname_field"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/lightGrey"
                android:textSize="15dp"
                android:ems="10"
                android:hint="Lastname"
                android:inputType="text" />

            <EditText
                android:id="@+id/birthday_field"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/lightGrey"
                android:textSize="15dp"
                android:ems="10"
                android:hint="Date of birth"
                android:inputType="text" />

            <EditText
                android:id="@+id/email_field"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/lightGrey"
                android:textSize="15dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/password_field"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/lightGrey"
                android:textSize="15dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/confirmPassword_field"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/lightGrey"
                android:textSize="15dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="text" />

            <EditText
                android:id="@+id/secretQuestion_field"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/lightGrey"
                android:textSize="15dp"
                android:ems="10"
                android:hint="Secret Question"
                android:inputType="text" />

            <EditText
                android:id="@+id/secretAnswer_field"
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/lightGrey"
                android:textSize="15dp"
                android:ems="10"
                android:hint="Answer"
                android:inputType="text" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/button_confirm"
        android:layout_width="250dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979"
        app:srcCompat="@drawable/button_confirm" />

    <ImageView
        android:id="@+id/button_arrowBack"
        android:layout_width="37dp"
        android:layout_height="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        app:srcCompat="@drawable/arrow_left_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>